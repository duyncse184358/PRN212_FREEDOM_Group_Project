<Window x:Class="LibraryWpfApp.Views.BookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:LibraryWpfApp.ViewModels"
        xmlns:conv="clr-namespace:LibraryWpfApp.Converters"
        Title="Book Management" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:BookViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="RightAlignedText" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>
    </Window.Resources>

    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox Width="300" Text="{Binding SearchKeyword}" Margin="0,0,10,0" Style="{StaticResource ModernTextBoxStyle}"/>
            <Button Content="Search" Command="{Binding SearchCommand}" Margin="0,0,10,0" Style="{StaticResource ModernButtonStyle}"/>

            <!-- Các nút quản lý chỉ hiển thị nếu CanManageBooks là true (Admin/Librarian/Staff) -->
            <Button Content="Add New" Command="{Binding AddCommand}" Margin="0,0,10,0" Style="{StaticResource ModernButtonStyle}"
                    Visibility="{Binding CanManageBooks, Converter={StaticResource BoolToVisibility}}"/>
            <Button Content="Edit Selected" Command="{Binding EditCommand}" Margin="0,0,10,0" Style="{StaticResource ModernButtonStyle}"
                    Visibility="{Binding CanManageBooks, Converter={StaticResource BoolToVisibility}}"/>
            <Button Content="Delete Selected" Command="{Binding DeleteCommand}" Style="{StaticResource ModernButtonStyle}"
                    Visibility="{Binding CanManageBooks, Converter={StaticResource BoolToVisibility}}"/>
        </StackPanel>

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
            <!-- Nút Borrow Book hiển thị cho tất cả các vai trò có quyền mượn sách -->
            <Button Content="Borrow Book" Command="{Binding BorrowBookCommand}" Margin="0,0,10,0" Style="{StaticResource ModernButtonStyle}"/>
            <Button Content="Return Book" Command="{Binding ReturnBookCommand}" Margin="0,0,10,0" Style="{StaticResource ModernButtonStyle}"/>

            <!-- Các nút Mark Lost/Damaged chỉ hiển thị nếu CanManageBooks là true -->
            <Button Content="Mark Lost" Command="{Binding MarkLostCommand}" Margin="0,0,10,0" Style="{StaticResource ModernButtonStyle}"
                    Visibility="{Binding CanManageBooks, Converter={StaticResource BoolToVisibility}}"/>
            <Button Content="Mark Damaged" Command="{Binding MarkDamagedCommand}" Style="{StaticResource ModernButtonStyle}"
                    Visibility="{Binding CanManageBooks, Converter={StaticResource BoolToVisibility}}"/>
        </StackPanel>

        <DataGrid ItemsSource="{Binding Books}"
                  SelectedItem="{Binding SelectedBook}"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  Style="{StaticResource ModernDataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding BookId}" Width="Auto"/>
                <DataGridTextColumn Header="ISBN" Binding="{Binding Isbn}" Width="Auto"/>
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="2*"/>
                <DataGridTextColumn Header="Author" Binding="{Binding Author}" Width="*"/>
                <DataGridTextColumn Header="Publisher" Binding="{Binding Publisher}" Width="*"/>
                <DataGridTextColumn Header="Year" Binding="{Binding PublicationYear}" Width="Auto"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category.CategoryName}" Width="Auto"/>
                <DataGridTextColumn Header="Total Copies" Binding="{Binding NumberOfCopies}" Width="Auto"/>
                <DataGridTextColumn Header="Available" Binding="{Binding AvailableCopies}" Width="Auto"/>
                <DataGridTextColumn Header="Location" Binding="{Binding ShelfLocation}" Width="Auto"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>