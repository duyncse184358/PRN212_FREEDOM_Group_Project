<Window x:Class="LibraryWpfApp.Views.OverdueBooksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:LibraryWpfApp.ViewModels"
        xmlns:conv="clr-namespace:LibraryWpfApp.Converters" 
        xmlns:System="clr-namespace:System;assembly=System.Runtime" 
    Title="Overdue Books" Height="500" Width="900"
        WindowStartupLocation="CenterScreen">

  

    <Window.Resources>
        <Style x:Key="RightAlignedText" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>
    </Window.Resources>

    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Reload Overdue List" Command="{Binding ReloadOverdueCommand}" Margin="0,0,10,0" Style="{StaticResource ModernButtonStyle}"/>
            <Button Content="Process Selected Fine" Command="{Binding ProcessFineCommand}" Style="{StaticResource ModernButtonStyle}"/>
        </StackPanel>

        <DataGrid ItemsSource="{Binding OverdueBorrowings}" AutoGenerateColumns="False"
                  SelectedItem="{Binding SelectedOverdueBorrowing}" IsReadOnly="True"
                  Style="{StaticResource ModernDataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Borrowing ID" Binding="{Binding BorrowingID}" Width="Auto"/>
                <DataGridTextColumn Header="Book Title" Binding="{Binding BookTitle}" Width="2*"/>
                <DataGridTextColumn Header="Patron Name" Binding="{Binding PatronName}" Width="*"/>
                <DataGridTextColumn Header="Borrow Date" Binding="{Binding BorrowDate, StringFormat=dd/MM/yyyy}" Width="Auto"/>
                <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate, StringFormat=dd/MM/yyyy}" Width="Auto"/>
                <DataGridTextColumn Header="Return Date" Binding="{Binding ReturnDate, StringFormat=dd/MM/yyyy}" Width="Auto"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto"/>
                <DataGridTextColumn Header="Days Overdue" Width="Auto">
                    <DataGridTextColumn.Binding>
                        <MultiBinding Converter="{StaticResource DaysOverdueConverter}">
                            <Binding Path="DueDate"/>
                            <Binding Path="Status"/>
                            <Binding Source="{x:Static System:DateTime.Now}"/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Calculated Fine" Binding="{Binding FineAmount, StringFormat=C}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>