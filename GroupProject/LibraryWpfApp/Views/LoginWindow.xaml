<Window x:Class="LibraryWpfApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:LibraryWpfApp.ViewModels"
        Title="Library Management System - Login" 
        Height="305" Width="468"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF8F9FA">

    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>

    <Grid Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <!-- Main Card Container -->
        <Border Background="White" 
                CornerRadius="5" 
                Margin="10,10,7,10"
                BorderBrush="#FFE9ECEF" 
                BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                                  Opacity="0.04" 
                                  ShadowDepth="1" 
                                  BlurRadius="6"/>
            </Border.Effect>

            <Grid Margin="14,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header -->
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Username Label -->
                    <RowDefinition Height="Auto"/>
                    <!-- Username TextBox -->
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Password Label -->
                    <RowDefinition Height="Auto"/>
                    <!-- Password TextBox -->
                    <RowDefinition Height="12"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Login Button -->
                    <RowDefinition Height="6"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Footer -->
                </Grid.RowDefinitions>

                <!-- Header Section -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center">
                    <Border Width="28" Height="28" 
                            Background="#FFB5C9D7" 
                            CornerRadius="14" 
                            Margin="0,0,0,5">
                        <TextBlock Text="📖" 
                                   FontSize="12" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="Welcome Back!" 
                               FontSize="15" 
                               FontWeight="Bold" 
                               Foreground="#FF050C11" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Sign in to your library account" 
                               FontSize="10" 
                               Foreground="Black" 
                               HorizontalAlignment="Center" 
                               Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Username Section -->
                <TextBlock Grid.Row="1" 
                           Text="Username" 
                           FontSize="11" 
                           FontWeight="SemiBold" 
                           Foreground="#FF0A0B0B"
                           Margin="0,2,0,10" Grid.RowSpan="2"/>
                <Border Grid.Row="1" 
                        BorderBrush="#FFCBD5E0" 
                        BorderThickness="1" 
                        CornerRadius="3"
                        Background="White" RenderTransformOrigin="0.542,-1.759" Margin="0,17,0,10" Grid.RowSpan="3">
                    <TextBox Text="{Binding Username}" 
                             Padding="7,4" 
                             FontSize="11" 
                             BorderThickness="0" 
                             Background="Transparent"
                             Foreground="#FF05070B"
                             Height="22" RenderTransformOrigin="0.527,-1.421" Margin="-1,1,1,-1"/>
                </Border>

                <!-- Password Section -->
                <TextBlock Grid.Row="1" 
                           Text="Password" 
                           FontSize="11" 
                           FontWeight="SemiBold" 
                           Foreground="#FF0A0B0B"
                           Margin="0,41,0,1" Grid.RowSpan="4"/>
                <Border Grid.Row="4" 
                        BorderBrush="#FFCBD5E0" 
                        BorderThickness="1" 
                        CornerRadius="3"
                        Background="White" Margin="0,10,0,17" Grid.RowSpan="3" RenderTransformOrigin="0.505,-0.282">
                    <PasswordBox Name="PasswordBox" 
                                 PasswordChanged="PasswordBox_PasswordChanged" 
                                 Padding="7,4" 
                                 FontSize="11" 
                                 BorderThickness="0" 
                                 Background="Transparent"
                                 Height="22" Margin="1,0,-1,0"/>
                </Border>

                <!-- Login Button -->
                <Button Grid.Row="4" 
                        Content="Sign In" 
                        Command="{Binding LoginCommand}" 
                        Height="28" 
                        FontSize="12" 
                        FontWeight="SemiBold" 
                        Foreground="White"
                        Cursor="Hand"
                        Background="#FF13354B"
                        BorderThickness="0"
                        Margin="0,39,0,19" Grid.RowSpan="4">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF007ACC"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="3" 
                                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#FF005A9E"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter Property="Background" Value="#FF004080"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Footer -->
            </Grid>
        </Border>
    </Grid>
</Window>