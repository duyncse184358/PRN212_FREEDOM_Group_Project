<Window x:Class="LibraryWpfApp.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:LibraryWpfApp.ViewModels"
        Title="Login" Height="300" Width="450"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Username Label -->
            <RowDefinition Height="Auto"/>
            <!-- Username TextBox -->
            <RowDefinition Height="Auto"/>
            <!-- Password Label -->
            <RowDefinition Height="Auto"/>
            <!-- PasswordBox -->
            <RowDefinition Height="*"/>
            <!-- Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- Login Button -->
        </Grid.RowDefinitions>

        <TextBlock Text="Library Login" Grid.Row="0"
                   FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,15"/>

        <Label Content="Username:" Grid.Row="1"/>
        <TextBox Grid.Row="2" Text="{Binding Username}" Style="{StaticResource ModernTextBoxStyle}"/>

        <Label Content="Password:" Grid.Row="3"/>
        <PasswordBox Name="PasswordBox" Grid.Row="4" PasswordChanged="PasswordBox_PasswordChanged" Style="{StaticResource ModernPasswordBoxStyle}"/>

        <Button Content="Login" Grid.Row="6" Command="{Binding LoginCommand}" Margin="0,15,0,0" Style="{StaticResource ModernButtonStyle}"/>
    </Grid>
</Window>
