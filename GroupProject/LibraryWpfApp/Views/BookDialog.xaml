<Window x:Class="LibraryWpfApp.Views.BookDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:LibraryWpfApp.ViewModels"
        Title="Book Details" Height="580" Width="450"
        WindowStartupLocation="CenterOwner">

    <Window.DataContext>
        <vm:BookDialogViewModel />
    </Window.DataContext>

    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Author -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Publisher -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Publication Year -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Category (Genre) -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- ISBN -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- NumberOfCopies -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- AvailableCopies -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- ShelfLocation -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Status -->
            <!-- RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> -->
            <!-- CoverImageUrl đã bị xóa -->
            <RowDefinition Height="*"/>
            <!-- Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Book Details" Grid.Row="0"
                   FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <Label Content="Title" Grid.Row="1" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="2" Text="{Binding Book.Title}" Style="{StaticResource ModernTextBoxStyle}" />

        <Label Content="Author" Grid.Row="3" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="4" Text="{Binding Book.Author}" Style="{StaticResource ModernTextBoxStyle}" />

        <Label Content="Publisher" Grid.Row="5" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="6" Text="{Binding Book.Publisher}" Style="{StaticResource ModernTextBoxStyle}" />

        <Label Content="Publication Year" Grid.Row="7" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="8" Text="{Binding Book.PublicationYear}" Style="{StaticResource ModernTextBoxStyle}" />

        <Label Content="Category" Grid.Row="9" Style="{StaticResource LabelStyle}"/>
        <ComboBox Grid.Row="10" ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}"
                  DisplayMemberPath="CategoryName" Style="{StaticResource ModernComboBoxStyle}"/>

        <Label Content="ISBN" Grid.Row="11" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="12" Text="{Binding Book.Isbn}" Style="{StaticResource ModernTextBoxStyle}" />

        <Label Content="Total Copies" Grid.Row="13" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="14" Text="{Binding Book.NumberOfCopies}" Style="{StaticResource ModernTextBoxStyle}" />

        <Label Content="Available Copies" Grid.Row="15" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="16" Text="{Binding Book.AvailableCopies}" Style="{StaticResource ModernTextBoxStyle}" IsEnabled="False" />

        <Label Content="Shelf Location" Grid.Row="17" Style="{StaticResource LabelStyle}"/>
        <TextBox Grid.Row="18" Text="{Binding Book.ShelfLocation}" Style="{StaticResource ModernTextBoxStyle}" />

        <Label Content="Status" Grid.Row="19" Style="{StaticResource LabelStyle}"/>
        <ComboBox Grid.Row="20" ItemsSource="{Binding BookStatuses}" SelectedItem="{Binding Book.Status}"
                  Style="{StaticResource ModernComboBoxStyle}"/>

        <!-- CoverImageUrl đã bị xóa -->
        <!-- <Label Content="Cover Image URL" Grid.Row="21" Style="{StaticResource LabelStyle}"/> -->
        <!-- <TextBox Grid.Row="22" Text="{Binding Book.CoverImageUrl}" Style="{StaticResource ModernTextBoxStyle}" /> -->

        <StackPanel Grid.Row="21" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Style="{StaticResource ModernButtonStyle}" Click="Save_Click" Margin="0,0,10,0"/>
            <Button Content="Cancel" Style="{StaticResource ModernButtonStyle}" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>