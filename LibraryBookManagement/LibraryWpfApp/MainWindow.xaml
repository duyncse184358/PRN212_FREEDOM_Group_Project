<Window x:Class="LibraryWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryWpfApp"
        mc:Ignorable="d"
        Title="Library Management System" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2c3e50">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="📚 Library Management System" 
                               FontSize="20" FontWeight="Bold" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="20,0">
                    <TextBlock x:Name="TxtUserInfo" 
                               Text="Welcome, User" 
                               Foreground="White" 
                               VerticalAlignment="Center" 
                               Margin="0,0,15,0"/>
                    <Button x:Name="BtnLogout" 
                            Content="Logout" 
                            Background="#e74c3c" 
                            Foreground="White" 
                            Padding="10,5" 
                            BorderThickness="0"
                            Click="BtnLogout_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Sidebar Navigation -->
            <Border Grid.Column="0" Background="#34495e">
                <StackPanel Margin="0,20">
                    <Button x:Name="BtnBooks" Content="📖 Books Management" 
                            Style="{DynamicResource NavButtonStyle}" Click="BtnBooks_Click"/>
                    <Button x:Name="BtnPatrons" Content="👥 Patrons" 
                            Style="{DynamicResource NavButtonStyle}" Click="BtnPatrons_Click"/>
                    <Button x:Name="BtnBorrowing" Content="📋 Borrowing" 
                            Style="{DynamicResource NavButtonStyle}" Click="BtnBorrowing_Click"/>
                    <Button x:Name="BtnReturns" Content="↩️ Returns" 
                            Style="{DynamicResource NavButtonStyle}" Click="BtnReturns_Click"/>
                    <Button x:Name="BtnFines" Content="💰 Fines" 
                            Style="{DynamicResource NavButtonStyle}" Click="BtnFines_Click"/>
                    <Button x:Name="BtnCategories" Content="📂 Categories" 
                            Style="{DynamicResource NavButtonStyle}" Click="BtnCategories_Click"/>
                    <Button x:Name="BtnUsers" Content="👤 Users" 
                            Style="{DynamicResource NavButtonStyle}" Click="BtnUsers_Click"/>
                    <Button x:Name="BtnReports" Content="📊 Reports" 
                            Style="{DynamicResource NavButtonStyle}" Click="BtnReports_Click"/>
                </StackPanel>
            </Border>
            
            <!-- Content Area -->
            <Grid Grid.Column="1" Background="#ecf0f1">
                <ContentControl x:Name="MainContentArea" Margin="20"/>
            </Grid>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#bdc3c7">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                <TextBlock x:Name="TxtStatus" Text="Ready" FontSize="12"/>
            </StackPanel>
        </Border>
    </Grid>
    
    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3498db"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window>
