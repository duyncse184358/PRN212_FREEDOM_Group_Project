<Window x:Class="LibraryWpfApp.Windows.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Library Management System - Login" 
        Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Border Background="LinearGradientBrush">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#667eea" Offset="0"/>
                <GradientStop Color="#764ba2" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        
        <Grid>
            <Border Background="White" 
                    Margin="40"
                    CornerRadius="10"
                    Opacity="0.9">
                <Border.Effect>
                    <DropShadowEffect Color="Black" 
                                      Direction="270"
                                      ShadowDepth="5"
                                      BlurRadius="10"
                                      Opacity="0.3"/>
                </Border.Effect>
                
                <StackPanel Margin="40" VerticalAlignment="Center">
                    <!-- Logo/Title -->
                    <TextBlock Text="ðŸ“š Library Management"
                               FontSize="24"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Foreground="#333"
                               Margin="0,0,0,30"/>
                    
                    <!-- Username -->
                    <TextBlock Text="Username:" 
                               FontSize="14"
                               Foreground="#555"
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="TxtUsername"
                             Height="35"
                             FontSize="14"
                             Padding="10,5"
                             BorderBrush="#ddd"
                             BorderThickness="1"
                             Margin="0,0,0,15"/>
                    
                    <!-- Password -->
                    <TextBlock Text="Password:" 
                               FontSize="14"
                               Foreground="#555"
                               Margin="0,0,0,5"/>
                    <PasswordBox x:Name="TxtPassword"
                                 Height="35"
                                 FontSize="14"
                                 Padding="10,5"
                                 BorderBrush="#ddd"
                                 BorderThickness="1"
                                 Margin="0,0,0,20"/>
                    
                    <!-- Login Button -->
                    <Button x:Name="BtnLogin"
                            Content="Login"
                            Height="40"
                            FontSize="16"
                            FontWeight="Bold"
                            Background="#667eea"
                            Foreground="White"
                            BorderThickness="0"
                            Click="BtnLogin_Click"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#5a6fd8"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    <!-- Error Message -->
                    <TextBlock x:Name="TxtError"
                               Foreground="Red"
                               FontSize="12"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"
                               Visibility="Collapsed"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
